<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".fragments.WorkoutCreationFragment" >

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Select the intensity"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLowIntensity"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/teal"
        android:text="Low Intensity"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/buttonMidIntensity"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/teal"
        android:text="Mid Intensity"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLowIntensity"
        app:layout_constraintStart_toStartOf="@+id/buttonLowIntensity"
        app:layout_constraintTop_toBottomOf="@+id/buttonLowIntensity" />

    <Button
        android:id="@+id/buttonHighIntensity"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/teal"
        android:text="High Intensity"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonMidIntensity"
        app:layout_constraintStart_toStartOf="@+id/buttonMidIntensity"
        app:layout_constraintTop_toBottomOf="@+id/buttonMidIntensity" />

    <Button
        android:id="@+id/buttonCancelWorkout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Cancel Workout"
        android:textSize="20sp"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonHighIntensity"
        app:layout_constraintStart_toStartOf="@+id/buttonHighIntensity"
        app:layout_constraintTop_toBottomOf="@+id/buttonHighIntensity" />
</androidx.constraintlayout.widget.ConstraintLayout>